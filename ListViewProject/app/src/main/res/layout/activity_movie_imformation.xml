<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="225dp">
                
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp" 
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"/>
                
                <ImageButton
                    android:id="@+id/imforPoster"
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imforPoster"
                    android:layout_alignParentBottom="true"
                    tools:text="창궐"
                    android:textSize="30dp"
                    android:textStyle="bold"/>
                
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imf_star1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FAFAFA"
                    android:scaleType="fitCenter"
                    android:src="@drawable/no_star"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/poster" />
                <ImageButton
                    android:id="@+id/imf_star2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FAFAFA"
                    android:scaleType="fitCenter"
                    android:src="@drawable/no_star"
                    app:layout_constraintStart_toEndOf="@id/star1"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageButton
                    android:id="@+id/imf_star3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FAFAFA"
                    android:scaleType="fitCenter"
                    android:src="@drawable/no_star"
                    app:layout_constraintStart_toEndOf="@id/star2"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageButton
                    android:id="@+id/imf_star4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FAFAFA"
                    android:scaleType="fitCenter"
                    android:src="@drawable/no_star"
                    app:layout_constraintStart_toEndOf="@id/star3"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageButton
                    android:id="@+id/imf_star5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#FAFAFA"
                    android:scaleType="fitCenter"
                    android:src="@drawable/no_star"
                    app:layout_constraintStart_toEndOf="@id/star4"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#FAFAFA"
                android:text="보고싶어요"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>
        
    </ScrollView>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="추천"/>

        <View
            android:id="@+id/view"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#D6D7D7" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="평가하기"/>

        <View
            android:id="@+id/view2"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#D6D7D7" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="마이페이지"/>
    </LinearLayout>


</FrameLayout>